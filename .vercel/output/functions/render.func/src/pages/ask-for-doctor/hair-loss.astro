---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/common/Header';
import Breadcrumb from '../../components/common/Breadcrumb';
import AskDoctor from '../../components/common/AskDoctor.astro';
import Footer from '../../components/common/Footer';
---

<Layout title="iCliniq - Hair Loss">
    <Header client:visible />
    <Breadcrumb  content='Ask a Doctor Online' />
    <AskDoctor />
    <Footer  />
</Layout>


<style is:global>
	* {
		font-size: 14px;
	}


	.footer {
		position: relative;
		z-index: 0;
		background-color: #042355;
		min-height: 500px;
		width: 100%;   
		margin-top: 30px;
	}

	.footer::after {
		content: "";
		position: absolute;
		z-index: -1;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		background: url(https://assets.icliniq.com/v2/assets/images/iq-trans-bg.png) top 0 left 0/320px auto,url(https://assets.icliniq.com/v2/assets/images/iq-trans-bg.png) top 80px left 160px/320px auto;
		opacity: .05;
	}

</style>
